" this is my gvimrc
" windows position and size
winpos 275 25
set lines=60 columns=80

" no menu bar
set guioptions-=m
" no toolbar
set guioptions-=T
" no right-hand scrollbar
set guioptions-=r
" no left-hand scrollbar
set guioptions-=l
set guioptions-=L
" set guifont=Anonymous_Pro:h11:cANSI  
" set guifont=Hack:h9:cANSI
set guifont=Monaco\ 14
" set guifont=Ubuntu\ Mono\ 12
colorscheme basic

